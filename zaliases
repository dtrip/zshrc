# aliases for zsh
alias zshrc="vim ~/.zshrc"
alias zhash='source ~/.zshrc'
alias s='screen'
alias sls='screen -ls'
alias grwatch='grunt watch &'
alias grstop='pkill grunt'
alias gr='grunt'
alias v='TERM=screen-256color vi'
alias up='cd ..'
alias back='cd -'
alias ack='ack-grep'
alias rm='rm -i'
alias ll='ls -alF --color'

# tmux aliases
alias t='tmux -2'
alias tlist='tmux list-sessions'
alias tvsplit='tmux split-window -h'
alias tsplit='tmux split-window'
alias tswap='tmux swap-pane'


