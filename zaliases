# aliases for zsh
# alias zshrc="vim ~/.zshrc"
alias zhash='source ~/.zshrc'
alias s='screen'
alias sls='screen -ls'
alias g='git'
alias gr='grunt'
alias grwatch='grunt watch &'
alias grstop='pkill grunt'
alias v='TERM=screen-256color vi'
alias up='cd ..'
alias back='cd -'
alias ack='ack-grep'
alias rm='rm -i'
alias ll='ls -a -l --color=auto'


alias log='multitail -f'
alias logc='multitail -Cs -f'

# compdef cdv='cd'
alias cdv='cd /var/www'

alias ff='firefox -new-window &'
alias files='marlin &'
alias chrome='google-chrome'

alias bat='upower -i /org/freedesktop/UPower/devices/battery_BAT0| grep -E "state|to\ full|percentage"'

# tmux aliases
alias t='tmux -2'
alias tlist='tmux list-sessions'
alias tvsplit='tmux split-window -h'
alias tsplit='tmux split-window'
alias tswap='tmux swap-pane'
alias tnew='tmux new -s'
alias tdetach='tmux detach -a'

# for when cynthia is sleeping
alias cynsleep='redshift -b 0.25 &'
alias cynawake='redshift -x &'

alias mitmproxy='mitmproxy'
alias sslsplit='sslsplit'

# record audio from mic -- just incase
alias rec='arecord -f cd -t raw | oggenc - -r -o record.ogg'
